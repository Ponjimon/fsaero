{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "assignees": ["@ponjimon"],
  "labels": ["renovate"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@ponjimon"]
  }
}
